# Supabase
# Get these from https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Todoist OAuth
# Register your app at https://developer.todoist.com/appconsole.html
NEXT_PUBLIC_TODOIST_CLIENT_ID=your-client-id
TODOIST_CLIENT_SECRET=your-client-secret
NEXT_PUBLIC_TODOIST_REDIRECT_URI=http://localhost:3000/api/auth/todoist/callback

# Todoist API Token (for development/testing)
# Get your personal API token from https://todoist.com/prefs/integrations
# This is temporary - production will use OAuth
TODOIST_API_TOKEN=your-api-token-here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication
# Password to access the application
AUTH_PASSWORD=tothemoon
